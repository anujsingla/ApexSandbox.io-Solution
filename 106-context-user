public Map<String,String> getContextUserInformation(){
    //code here
    Map<String,String> userDetails = new Map<String,String>();
    userDetails.put('EmailId', UserInfo.getUserEmail());
    userDetails.put('ProfileId', UserInfo.getProfileId());
    userDetails.put('Type', UserInfo.getUserType());
    userDetails.put('UserName', UserInfo.getUserName());
    return userDetails;

}